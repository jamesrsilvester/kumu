<% @posts.each do |post| %>
    <div class="row card #fafafa hoverable">
      <div class="col m1 center-align">
        <button class= "waves-effect waves-green btn-flat">
            <i class= "material-icons clear">arrow_upward</i>
        </button>
      </div>
        <div class="col m11 card-content black-text">
          <h5 class="title">
          <a href="http://<%= post.url %>" target="_blank"> <%= post.name %></a><br>
        </h5>
          <p class="grey-text text-darken-3">
            <%= post.description %>
          </p>
        </div>
        <div class="col m1 center-align">
          <button class= "waves-effect waves-red btn-flat">
              <i class= "material-icons clear">arrow_downward</i>
          </button>
        </div>
    </div>



    <% @posts.each do |post| %>
        <h4><%= link_to post.name, post %><br>
          Submitted <%= time_ago_in_words(post.created_at) %>

        </h4>
        <%= link_to like_post_path(post), method: :put do %>
      Upvote
      <%= post.get_upvotes.size %>
    <% end %>

    <%= link_to dislike_post_path(post), method: :put do %>
      Downvote
      <%= post.get_downvotes.size %>
    <% end %>

<% end %>
