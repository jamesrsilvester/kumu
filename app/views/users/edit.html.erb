<%= form_for @user do |f| %>
<div class="grey lighten-4 z-depth-3">
  <div class="container">
    <h3 class="center-align">Edit Profile</h3>
    <div>
      <h5>Last Name:</h5>
      <%= f.text_field :last_name %>
      <h5>Password:</h5>
      <%= f.text_field :password_digest, value: nil, placeholder: "update password" %>
      <h5>Bio:</h5>
      <%= f.text_area :bio, class:"materialize-textarea"%>
    </div>
    <div class="center-align">
      <%= f.submit "Update Profile", class:"btn-flat"%>
      <%= link_to "Back", @user, class:"btn-flat"%>
      <br>
    </div>
  </div>
</div>
<% end %>

<div class="upload">
  <h2>Upload User Image</h2>
  <%= form_for @user, html:{ multipart: true } do |f| %>
  <span>Image</span>
  <%= f.file_field :image %>
  <div class="actions">
    <%= f.submit %>
  </div>
  <% end %>
</div>
